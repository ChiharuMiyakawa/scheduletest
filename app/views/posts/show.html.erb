
<div class = "container-md">
 <section class = "form">
  <p class = "mt-3">
    <%= link_to :posts ,class: "text-decoration-none link-secondary" do %>
    <i class="bi bi-backspace"></i>
    一覧に戻る
    <% end %>
  </p>
  <div class = "d-flex align-items-center justify-content-between mb-3">
    <h3 class = "mb-0"><%= @post.title %></h3>
    <%= link_to  [:edit, @post],class: "btn btn-outline-primary btn-sm" do %>
      <i class="bi bi-pencil-fill"></i>
      編集
    <% end %>
    </div>
  <div class = "FormContainer ">
    <table class = "table table-striped table-bordered mb-0">
      <tr>
        <th class = "col-4">開始日</th>
        <td class = "px-4"><%= @post.start_date.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td class = "px-4"><%= @post.end_date.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td class = "px-4"><%= @post.all_day_existence ? "⚪︎":"" %></td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td class = "px-4"><%= @post.memo %></td>
      </tr>
    </table>
  </div>
  </section>
</div>