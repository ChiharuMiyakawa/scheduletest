
<%= form_with model: post do |f| %>

    <div class = "FormContainer">
       <div class = "Title_Form">
           <%= f.label :title ,"タイトル" %>
           <%= f.text_field :title ,class: "text_field" %>
           <% if post.errors.any? %>
               <% post.errors.full_messages_for(:title).each do |message| %>
               <ul>
                   <li class = "text-danger"><%= message %></li>
               </ul>
               <% end %>
            <% end %>
       </div>

        <div class = "Start_Date_Form">
           <%= f.label :start_date ,"開始日" %>
           <%= f.date_field :start_date,class: "text_field" %>
           <% if post.errors.any? %>
           <% post.errors.full_messages_for(:start_date).each do |message| %>
               <ul>
                   <li class = "text-danger"><%= message %></li>
               </ul>
               <% end %>
           <% end %>
       </div>

        <div class = "End_Date_Form">
           <%= f.label :end_date ,"終了日" %>
           <%= f.date_field :end_date ,class: "text_field" %>
           <% if post.errors.any? %>
           <% post.errors.full_messages_for(:end_date).each do |message| %>
           <ul>
               <li class = "text-danger"><%= message %></li>
           </ul>
           <% end %>
        <% end %>
       </div>
       <div class = "all_day_existence">
           <%= f.check_box :all_day_existence,{},"true","false" %>  
           <%= f.label :all_day_existence ,"終日の場合はチェック" %>   
       </div>
       <div class = "Memo_Form">
       <%= f.label :memo ,"メモ" %>
       <%= f.text_area :memo,class: "text_area" %>
       </div>

       <div class = "Form_buttons d-flex text-align-center justify-content-between">
            <%= link_to "キャンセル", :posts , class: "btn btn-secondary btn-sm" %>
            <%= f.submit "保存" ,class:"btn btn-primary btn-sm" %>

       </div>

    </div>

<% end %>


